{% extends 'main.twig' %}

{% block head %}
	<link rel="preload" href="/fonts/roboto.woff2" as="font"  crossorigin="anonymous">
	<link rel="preload" href="/fonts/roboto-bold.woff2" as="font"  crossorigin="anonymous">
	<link rel="preload" href="/fonts/roboto-light.woff2" as="font"  crossorigin="anonymous">
	<link rel="preload" href="/fonts/roboto-medium.woff2" as="font"  crossorigin="anonymous">
	<meta name="theme-color" content="#ffffff">
{% endblock %}

{% block header_top %}
	<div class="header__top">
		<div class="header__contacts container">
			{% include 'fragments/socials.twig' with { mix: 'header__socials' } %}

			{% if PLACE_CHOOSER %}
				<div class="header__chooser-top">{{ PLACE_CHOOSER }}</div>
			{% endif %}
			{% if MASTER_CHOOSER %}
				<div class="header__chooser-top">{{ MASTER_CHOOSER }}</div>
			{% endif %}

			{% include 'fragments/tel-links.twig' with {
				mix: 'header__tel-link header__contact-link',
				tel: SITE_TEL
			} %}
		</div>
	</div>
{% endblock %}

{% block header_logo %}
	<a class="header__logo-link" href="/">
		<img alt="Логотип Шаг24" class="header__logo" src="//shag24.ru/img/shag24/logo.svg" width="400" height="60">
		<span class="sr-only">На главную страницу</span>
	</a>
{% endblock %}
